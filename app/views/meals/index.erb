<%@meals.each do |meal| %>


<h3><%=meal.name%></h3>
<ol>
	<%meal.foods.uniq.each do |food| %>
		<li><%=meal.foods.select{|f| food == f}.count%> serving(s)
		 <strong><%=food.name%></strong></li>
	<%end%>
</ol>
<p>
Protein: <strong><%=meal.protein%></strong>
Carbs: <strong><%=meal.carbs%></strong>
Fat: <strong><%=meal.fat%></strong>
Calories: <strong><%=meal.kcal%></strong>
</p>

<%end%>
<br>